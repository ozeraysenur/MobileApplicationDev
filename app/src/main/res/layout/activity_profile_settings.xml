<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/heartGreen"
    android:backgroundTintMode="add"
    tools:context=".ProfileSettings">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="197dp"
        android:layout_height="232dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_settings_icon" />

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="498dp"
        android:background="@drawable/startingbtn_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="Sandra Bullock"
            android:gravity="bottom|start"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="Loves cooking for her kids!"
            android:gravity="bottom|start"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:fontFamily="@font/sourcefont"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="43"
            android:gravity="bottom|start"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textSize="23dp"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="Using this app: 2 years"
            android:gravity="bottom|start"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            android:textSize="23dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                android:layout_width="377dp"
                android:layout_height="67dp"
                android:backgroundTint="#FFFFF0"
                android:text="Change profıle settıngs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>